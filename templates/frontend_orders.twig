{% set show_btn_cancelled = order.is_payed == 0 and order.is_cancelled == 0 and order.is_sended == 0 and order.is_shipped == 0 %}

<table>
	{%for order in orders %}
	    <tr style="background:#e5f2fd;border-bottom:1px solid #b7deff;">
	    	<td colspan="4">Заказа № {{ order.order_id }} от {{ order.date_create }}</td>
	   	</tr>
        <tr style="background:#e5f2fd;" data-order_id="{{ order.order_id }}">
        	<td>
           		{% if order.is_payed == 0 and order.is_cancelled == 0 and order.is_sended == 0 and order.is_shipped == 0 %}
                	<input type="button" value="Оплатить">
       	    	{% elseif order.is_payed == 1 %}
                	Оплачено
                {% endif %}
            </td>
           	<td colspan="3">
           		{% if show_btn_cancelled %}
           		    <input type="button" value="Отменить" onclick="mod_minishop.order_cancel(this);">
           		{% endif %}
           		<span class="orders_text_cancelled" style="{% if show_btn_cancelled %} display:none; {% endif %}">Отменено</span>
           		{% if order.is_payed == 1 and order.is_cancelled == 0 and order.is_sended == 1 and order.is_shipped == 0 %}
               	    <input type="button" value="Подтвердить доставку">
               	{% elseif order.is_shipped == 1 %}
               	    Доставлено
           		{% endif %}
           	</td>
        </tr>
	   	{% set price_total = 0 %}
    	{% for prod in order.prods %}
	        <tr>
	        	<td>{{ prod.prod_title }}</td>
	        	<td width="20">{{ prod.cart_count }}</td>
	        	<td width="10">X</td>
	        	<td width="150">{{ prod.prod_price / 100 }} руб.</td>
    	   	</tr>
  		   	{% set price_total = price_total + (prod.prod_price * prod.cart_count) %}
    	{% endfor %}
	    <tr style="text-align:right;">
	    	<td colspan="3" ></td>
	    	<td width="150">Итого: {{ price_total / 100  }} руб.</td>
	   	</tr>
	{% endfor %}
</table>